generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String    @id @default(uuid())
  userId    String
  name      String
  messages  Message[]
  createdAt DateTime  @default(now())
}

enum Sender {
  AI
  User
}

model Message {
  id        Int     @id @default(autoincrement())
  projectId String
  content   String
  sender    Sender
  project   Project @relation(fields: [projectId], references: [id])
}
